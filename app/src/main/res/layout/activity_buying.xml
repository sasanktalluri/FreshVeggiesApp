<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:background="#C0C0C0"
        app:cardElevation="15dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/bproduct_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textAlignment="center"
                android:textColor="#BF007A"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="1dp"
                android:padding="1dp"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:id="@+id/bimage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/bproduct_name"
                android:layout_marginTop="2dp"
                android:backgroundTint="@color/white"
                android:contentDescription="productImage"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/camera" />

            <TextView
                android:id="@+id/bprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bimage"
                android:text="Price"
                android:textAlignment="center"
                android:textColor="#BF007A"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:id="@+id/bfname"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bprice"
                android:text="Farmer Name"
                android:textAlignment="center"
                android:textColor="#BF007A"
                android:textSize="20sp"
                android:padding="1dp"
                android:layout_margin="1dp"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:id="@+id/bpluckedDate"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bfname"
                android:text="Plucked Date"
                android:textAlignment="center"
                android:textColor="#BF007A"
                android:textSize="20sp"
                android:padding="1dp"
                android:layout_margin="1dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/bquantity"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bpluckedDate"
                android:text="Quantity Available"
                android:textAlignment="center"
                android:textColor="#BF007A"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/bphone"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bquantity"
                android:text="Phone Number"
                android:textAlignment="center"
                android:textColor="#BF007A"
                android:textSize="20sp"
                android:padding="1dp"
                android:layout_margin="1dp"
                android:layout_gravity="center_horizontal" />

            <ImageButton
                android:id="@+id/bcall"
                android:layout_width="127dp"
                android:layout_height="110dp"
                android:layout_below="@+id/bprice"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:layout_toRightOf="@+id/bphone"
                android:scaleType="centerCrop"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:src="@drawable/ic_phone"
                android:layout_marginRight="1dp" />
        </RelativeLayout>


</androidx.cardview.widget.CardView>


